  <div class="modal-body">
    <%= form_for(@review, remote: true, html: { style: "display:inline;" }) do |f| %>
      <ul class="errors"></ul>
      <div class="form-group">
        <%= f.label :review_date %><br>
        <%= f.date_field :review_date, as: :date_picker, :value => Time.now.strftime('%Y-%m-%d') %>
      </div>
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, placeholder: "Enter name of pizza place" %>
      </div>
      <div class="form-group">
        <%= f.label :address %><br>
        <%= f.text_field :address, placeholder: "Enter full address (street, city, state). Ex: 800 6th Ave, New York, NY" %>
      </div>
      <div class="form-group">
        <%= f.label :score %><br>
        <%= f.text_field :score, placeholder: "Enter review score"%>
      </div>
      <div class="form-group">
        <%= f.label :url %><br>
        <%= f.text_field :url, placeholder: "Enter url for review post/video" %>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
